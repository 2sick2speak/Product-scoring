body
  padding: 25px


.breadcrumb
  font-size: 20px
  margin: 0 15px


.b-images,
.b-content,
.b-category,
.b-negative,
.b-characteristics
  border-radius: 5px
  box-shadow: 0 0 5px rgba(0, 0, 0, .5)
  margin-bottom: 15px
  padding: 10px 0

.b-characteristics

  & > div
    padding-right: 10px

  &__btn
    margin: auto

  & .b-tech-info__btn.form-group
    border-top: 1px rgb(200, 200, 200) solid
    margin-left: 0
    margin-right: 0
    padding-top: 15px

.b-submit
  margin-top: 20px

.b-alert
  display: none
  margin-top: 30px
  text-align: center

.b-tech-info
  border-top: 1px rgb(200, 200, 200) solid
  padding-top: 15px


.b-label
  border-bottom: 1px rgb(200, 200, 200) solid
  font-size: 24px
  margin-bottom: 15px
  padding: 5px
  text-align: center
  width: 100%
